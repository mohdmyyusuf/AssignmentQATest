pipeline{
	agent any
	stages{
		stage('compile stage'){
			steps{
			withMaven(maven : 'mavenDir'){
				sh 'mvn clean compile'		
				echo 'compiling the code'	
			
			}
		}
		
		}
		stage('testing stage'){
		
		steps{
			withMaven(maven : 'mavenDir'){
				sh 'mvn test'			
				echo 'testing the code'
			
			}
		}
			
		}
		
		stage('deployment stage'){
		
		steps{
			withMaven(maven : 'mavenDir'){
				sh 'mvn deploy'			
				echo 'deploying the code'
			}
		}
			
		}
	
	}


}